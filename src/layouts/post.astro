---
import HeadBase from '@/components/HeadBase.astro';
import PostPage from '@/components/pages/Post.vue';

const { content } = Astro.props;
const { title, date, description } = content;
const pageTitle = `${title} | The Press`;
---

<html lang="en">
  <head>
    <HeadBase title={pageTitle} {description} />
  </head>
  <body>
    <PostPage {title} {date} >
      <slot />
    </PostPage>
  </body>
</html>
